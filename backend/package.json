{
  "name": "smart_inventory_backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "db:init": "node ./scripts/db-init.cjs",
    "db:migrate": "knex --knexfile knexfile.cjs migrate:latest",
    "db:rollback": "knex --knexfile knexfile.cjs migrate:rollback",
    "db:seed": "knex --knexfile knexfile.cjs seed:run",
    "db:setup": "npm run db:init && npm run db:migrate && npm run db:seed",
    "test:api": "node ./scripts/test-api.mjs"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.6.1",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mysql2": "^3.15.3"
  }
}